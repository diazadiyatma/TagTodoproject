<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/backgrounddiaz">


    <Button
        android:id="@+id/getStartedButton"
        android:layout_width="243dp"
        android:layout_height="50dp"
        android:layout_marginTop="628dp"
        android:layout_marginEnd="84dp"
        android:backgroundTint="@color/bluet2"
        android:text="Get Started"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="271dp"
        android:layout_height="264dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logodiaz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="339dp"
        android:layout_height="97dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="356dp"
        android:text="Get to know your daily todo."
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="368dp"
        android:layout_height="97dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="460dp"
        android:text="Write down all your tasks, from homework, office work, sports, and lessons."
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>